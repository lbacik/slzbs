<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div id="menu">
            {{ render(controller('App\\Controller\\MenuController::menu')) }}
        </div>
        <div style="
            width: 900px;
            min-height: 600px;
            margin: 0 auto;
            padding: 20px 20px;
            background-color: #f1f2f3"
        >
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
