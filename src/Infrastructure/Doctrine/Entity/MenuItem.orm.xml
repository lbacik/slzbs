<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\MenuItem">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" length="128" nullable="false">
            <options>
                <option name="default"/>
            </options>
        </field>

        <field name="uri" type="string" length="128" nullable="true" />

        <field name="enabled" type="boolean" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <field name="created" type="datetimetz" nullable="true" />
        <field name="updated" type="datetimetz" nullable="true" />

    </entity>

</doctrine-mapping>