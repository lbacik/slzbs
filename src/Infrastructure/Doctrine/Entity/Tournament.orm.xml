<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Tournament">
        <id name="id" type="guid">
            <generator strategy="UUID" />
        </id>

        <field name="name" type="string" length="50" nullable="false" />
        <field name="description" type="string" length="255" nullable="true" />
        <field name="published" type="boolean" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="date" type="datetime" nullable="true" />
        <field name="created" type="datetime" nullable="true" />
        <field name="updated" type="datetime" nullable="true" />

        <one-to-many field="results" target-entity="TournamentResult" mapped-by="tournament" >
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>