<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\TournamentResult">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <many-to-one field="tournament" target-entity="Tournament" inversed-by="results" >
            <join-column name="tournament_id" referenced-column-name="id" />
        </many-to-one>

        <field name="name" type="string" length="50" nullable="false" />
        <field name="link" type="string" length="128" nullable="false" />

        <field name="published" type="boolean" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="created" type="datetime" nullable="true" />
    </entity>

</doctrine-mapping>